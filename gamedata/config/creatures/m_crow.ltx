;==============================================================================
; CROW
;==============================================================================
[m_crow]
	GroupControlSection					= spawn_group
	$spawn								= "monsters\crow"									;option for Level Editor
	$prefetch							= 50

	visual								= monsters\crow\crow
	corpse_visual						= monsters\crow\crow

	cform								= skeleton											;collision class
	class								= AI_CROW											;AI идентификатор класса

	;species of monster
	species								= bird

	;--------------------------------------------------------------------------
	; Physics
	;--------------------------------------------------------------------------
	ph_box0_center						= 0.0,  0.025, 0.0
	ph_box0_size						= 0.1,  0.05,  0.1
	ph_box1_center						= 0.0,  0.025, 0.0
	ph_box1_size						= 0.1,  0.05,  0.1

	ph_crash_speed_min					= 16.0
	ph_crash_speed_max					= 30.0
	ph_mass								= 1.0

	;--------------------------------------------------------------------------
	; Evaluation functions
	;--------------------------------------------------------------------------
	ef_creature_type					= -1

	;--------------------------------------------------------------------------
	; Entity conditions
	;--------------------------------------------------------------------------
	satiety_v							= 0.0												;скорость уменьшения сытости со временем [0...1]
	radiation_v							= 0.00001											;скорость уменьшения радиации [0...1]
	satiety_power_v						= 0.001												;увеличение силы при уменьшении сытости [0...1]
	satiety_health_v					= 0.001												;увеличение здоровья при уменьшении сытости [0...1]
	radiation_health_v					= 0.01												;уменьшение здоровья при воздействии радиации [0...1]
	morale_v							= 0.01												;скорость восстановления морали [0...1]
	health_hit_part						= 1.0												;процент хита, уходящий на отнимание здоровья [0...1]
	power_hit_part						= 1.0												;процент хита, уходящий на отнимание силы [0...1]
	psy_health_v						= 0.1												;скорость восстановления psy-здоровья [0...1]

	;открытые раны
	bleeding_v							= 0.05												;потеря крови при номинальной ране в секунду
	wound_incarnation_v					= 0.01												;крутизна кривой заживления (какой процент раны останется после заживления в игровую секунду)
	min_wound_size						= 0.01

	;immunities
	immunities_sect						= crow_immunities

	;--------------------------------------------------------------------------
	; Other
	;--------------------------------------------------------------------------
	spawn								= on








speed                    = 6.0
angular_speed            = 0.1
goal_change_delta        = 5.0
min_height	             = 35
goal_variability		 = 10.0, 15.0, 200.0
idle_sound_delta		 = 400.f

[crow_immunities]
burn_immunity = 1.0				;коэффициенты иммунитета 
strike_immunity = 1.0
shock_immunity = 1.0
wound_immunity = 1.0
radiation_immunity = 0.0
telepatic_immunity = 1.0
chemical_burn_immunity = 1.0
explosion_immunity = 1.0
fire_wound_immunity  = 1.0
